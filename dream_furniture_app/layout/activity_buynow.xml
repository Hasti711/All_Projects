<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Cart"
    android:id="@+id/drawer_layout"
    android:background="@color/bgc"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bgc">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container"
            android:background="@color/bgc">
            <ScrollView
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/bgc"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/p1"
                                    android:textSize="25sp"
                                    android:background="@drawable/border"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <EditText
                                android:id="@+id/buynow1"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/p1"
                                android:scrollbars="vertical"
                                android:textColor="@color/tc1"
                                android:textColorHint="@color/tc1"
                                android:inputType="text"
                                android:background="@drawable/border2"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/p2"
                                android:textSize="25sp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/border"
                                android:textColor="@color/white"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <EditText
                                android:id="@+id/buynow2"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/tc1"
                                android:textColorHint="@color/tc1"
                                android:inputType="textEmailAddress"
                                android:hint="@string/p2"
                                android:background="@drawable/border2"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/p4"
                                android:textSize="25sp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/border"
                                android:textColor="@color/white"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <EditText
                                android:id="@+id/buynow3"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/tc1"
                                android:textColorHint="@color/tc1"
                                android:inputType="text"
                                android:hint="@string/p4"
                                android:background="@drawable/border2"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/p5"
                                android:textSize="25sp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/border"
                                android:textColor="@color/white"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <EditText
                                android:id="@+id/buynow4"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/tc1"
                                android:inputType="textMultiLine"
                                android:textColorHint="@color/tc1"
                                android:hint="@string/p5"
                                android:background="@drawable/border2"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/p3"
                                android:textSize="25sp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/border"
                                android:textColor="@color/white"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <EditText
                                android:id="@+id/buynow5"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:textColor="@color/tc1"
                                android:inputType="phone"
                                android:textColorHint="@color/tc1"
                                android:hint="@string/p3"
                                android:background="@drawable/border2"/>
                            </LinearLayout>
                        </LinearLayout>
                        <Button
                            android:id="@+id/buynow6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/buynow"
                            android:background="@drawable/border"
                            android:layout_marginLeft="150dp"
                            android:layout_marginTop="30dp"
                            android:textColor="@color/white"/>
                        <include layout="@layout/footer" android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="230dp"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        android:background="@color/bgc"
        app:itemIconTint="@color/tc1"
        app:itemTextColor="@color/tc1"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>